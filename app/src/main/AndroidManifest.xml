            android:exported="false" />
        <activity
            android:name="com.example.woofNwhiskers.CardPayment"
            android:exported="false" />
        <activity
            android:name="com.example.woofNwhiskers.OtherProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.woofNwhiskers.AddPostActivity"
            android:exported="false" />
        <activity
            android:name="com.example.woofNwhiskers.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.woofNwhiskers.ProfileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
